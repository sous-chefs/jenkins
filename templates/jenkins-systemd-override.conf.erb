[Service]
User=<%= @user %>
Group=<%= @group %>
WorkingDirectory=<%= @home %>

# Jenkins home directory
Environment="JENKINS_HOME=<%= @home %>"

# JVM options
<% if @jvm_options %>
Environment="JAVA_OPTS=<%= @jvm_options %>"
<% end %>

# Jenkins port
Environment="JENKINS_PORT=<%= @port %>"

# Jenkins listen address
Environment="JENKINS_LISTEN_ADDRESS=<%= @listen_address %>"

# Additional Jenkins arguments
<% if @jenkins_args %>
Environment="JENKINS_OPTS=<%= @jenkins_args %>"
<% end %>

# Extra environment variables
<% @extra_variables.each do |name, value| -%>
Environment="<%= name %>=<%= value %>"
<% end -%>
